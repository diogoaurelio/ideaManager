<p id="notice"><%= notice %></p>
<% if current_user == @user %>
<h2> My Ideas </h2>
      <div class="row marketing">
        <% @idea_months.sort.each do |month, ideas| %>  
          <h3><%= month.strftime("%B %Y") %> Ideas</h3> 
          <hr> 
          <% ideas.each do |idea| %>  
          <div class="col-md-4">
            <h4><b><%= link_to idea.name, idea %></b> </h4> 
            <h6> Description:"<em> <%= idea.description %> </em>"</h6>
            <h6>
            <% idea.areas.each do |area| %>
               Area(s): <%= link_to idea.area_list, area_path(area) %>
            <% end %>
            </h6>
            <h6> Votes: <span class="badge"><%= idea.votes %></span></h6>
            <p>Created at <%= idea.created_at.to_date.to_s(:long) %></p> 

  			<%= link_to 'Edit', edit_idea_path(idea), class: 'btn btn-primary' %>

          </div>  
         <% end %> 
          <br>

        <% end %> 
      </div>
      <div class="text-center dspace">
          <a class="btn btn-success" href="<%= new_idea_path %>" role="button">New Idea</a>
          <%= link_to 'Back', ideas_path, class: 'btn btn-default' %>
      </div>
      <hr>
<% end %>

