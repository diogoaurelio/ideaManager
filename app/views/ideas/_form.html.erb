<%= form_for(@idea, html: { class: 'form-horizontal'}) do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter name for your idea' %>
  </div>
  <div class="field">
    <%= f.label :area_list %><br>
    <%= f.text_field :area_list, class: 'form-control', placeholder: 'Enter the company area; eg: Marketing' %>
  </div>
  <div class="field">
    <%= f.label :votes %><br>
    <%= f.number_field :votes %>
  </div>
  <div class="actions">
     <!-- <#%= f.submit %> -->
     <button name="commit" type="submit" value="Create Idea" class="btn btn-default btn-lg">Create Idea</button>
    <!--<a class="btn btn-large btn-primary" href="<#%= create_idea_path(@idea) %>">Create Idea</a> -->
  </div>
<% end %>
