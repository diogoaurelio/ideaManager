<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="dspace"><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter Email Address' %></div>

  <div class="dspace"><%= f.submit "Resend confirmation instructions", class: 'btn btn-default' %></div>
<% end %>

<%= render "devise/shared/links" %>
